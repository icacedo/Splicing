rule unzip_genomes:
	input:
		"ref/{genome}.WS285.genomic.fa.gz"
	output:
		"ref/{genome}.WS285.genomic.fa"
	shell:
		"gzip -dk {input}"

rule makeblastdb:
	input:
		"ref/{genome}.WS285.genomic.fa"
	output:
		multiext("blastdbs/{genome}.WS285.blastdb", ".ndb", ".nhr", ".nin", ".njs", \
		".not", ".nsq", ".ntf", ".nto")
	shell:
		"""
		makeblastdb -in {input} -dbtype prot -out blastdbs/{wildcards.genome}.WS285.blastdb
		touch {output}
		"""

# GETTING 0 HITS even againsts c. elegans, something is wrong
rule run_blastn:
	input:
		expand("blastdbs/{genome}.WS285.blastdb{ext}", genome=GENOMES, ext=EXTS),
		#query = "queries/ch.{sample}.fa"
	output:
		#"output/{genome}.WS285.{sample}.blastout.tsv"
		"output/{genome}.WS285.APC.blastout.tsv"
	shell:
		"blastx -db blastdbs/{wildcards.genome}.WS285.blastdb -query "
		"test.fa -outfmt '7 std stitle' > {output}"
		# -evalue 1e-3






















