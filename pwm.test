import seqlib 
import random

random.seed(2)
# https://en.wikipedia.org/wiki/Position_weight_matrix
# rows for each letter, columns for each position
# get frequencies at each position first, then probability
# use log odds probabilites for pwm

# generate 10 random sequences to test
def simple_seqgen():
	for i in range(1,11):
		id='>s'+str(i)
		seq=seqlib.random_dna(100,0.20,0.30,0.30,0.20)
		yield id,seq
	
for id,seq in simple_seqgen():
	n_counts={}
	counter=0
	for n in seq:
		if n not in n_counts:
			n_counts[n]=1
		else:
			n_counts[n]+=1
		counter+=1	
	n_freqs={}
	for n in n_counts:
		freq=n_counts[n]/counter
		n_freqs[n]=freq
	print(n_freqs)
	

	
