import seqlib 
import random
import numpy

random.seed(2)

def simple_seqgen(n,N):
	seq_list=[]
	for i in range(1,N+1):
		#id='>s'+str(i)
		seq=seqlib.random_dna(n,0.20,0.30,0.30,0.20)
		seq_list.append(seq)
	return(seq_list)

n=10
N=5

seqs=simple_seqgen(10,5)

def make_pwm(seqs,n):
	pwm=[{} for i in range(n)]
	for seq in seqs:
		position=0
		for nt in seq:
			if nt not in pwm[position]:
				pwm[position][nt]=1
			else:
				pwm[position][nt]+=1
			position+=1
	for i in range(len(pwm)):
		for nt in pwm[i]:
			pwm[i][nt]=pwm[i][nt]/N
	return(pwm)

print(make_pwm(seqs,n))












	
